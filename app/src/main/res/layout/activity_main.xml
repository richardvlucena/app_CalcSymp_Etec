<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_Subtrair"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/sub"
        android:textSize="40dp"

        android:background="@color/madc"
        android:textColor="@color/madc2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219" />

    <Button
        android:id="@+id/btn_Dividir"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/div"
        android:textSize="40dp"
        android:background="@color/madc2"
        android:textColor="@color/madc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <Button
        android:id="@+id/btn_Somar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/somar"
        android:background="@color/madc2"
        android:textSize="40dp"
        android:textColor="@color/madc"
        app:iconTintMode="add"
        app:layout_constraintBottom_toTopOf="@+id/btn_Subtrair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.564"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/btn_Multiplicar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/mult"
        android:textSize="30dp"
        android:background="@color/madc"
        android:textColor="@color/madc2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/btn_Sair"
        android:layout_width="135dp"
        android:layout_height="54dp"
        android:text="@string/sair"
        android:textSize="29dp"
        android:background="@color/madc"
        android:textColor="@color/madc2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <TextView
        android:id="@+id/txt_N1"
        android:layout_width="82dp"
        android:layout_height="61dp"
        android:text="@string/txtn1"
        android:textColor="@color/madc"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716" />

    <TextView
        android:id="@+id/txt_N2"
        android:layout_width="82dp"
        android:layout_height="61dp"
        android:text="@string/txtn2"
        android:textColor="@color/madc2"
        android:textSize="19dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.847" />

    <TextView
        android:id="@+id/txt_Result"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@color/madc2"
        android:text="Result"
        android:textAlignment="center"
        android:textColor="@color/madc"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toEndOf="@+id/btn_Sair"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <EditText
        android:id="@+id/txt_Imput2"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@color/madc2"
        android:textSize="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.703" />

    <EditText
        android:id="@+id/txt_Imput1"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@color/madc"
        android:textSize="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861" />

</androidx.constraintlayout.widget.ConstraintLayout>